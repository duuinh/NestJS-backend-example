// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}
model User {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email String  @unique
  isActive Boolean @default(true)
  firstName  String
  lastName  String
  gender Gender
  birthdate DateTime
  phoneNumber String
  address String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@map("users")
}

type ContractDetails {
	figures String[]
	fulfillPriority FulfillPriority?
	shareSafe ShareSafe?
	signatures Signature[]
}

type FulfillPriority {
  for String
	details String
}

type ShareSafe {
  for String
	details String
}

type Signature {
  name String
  img_url String
}

model Contract {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
	isPublic Boolean
	pool String[]
  ads String[]
  title String
  category String
  description String?
  price Float
  currency String @default("SEK")
  expired_date DateTime
  location String?
  details ContractDetails?
}